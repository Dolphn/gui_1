<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>


<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.TeamsController">
   <children>
      <Label layoutX="165.0" layoutY="14.0" text="Team verwalten">
         <font>
            <Font name="System Bold" size="36.0" />
         </font>
      </Label>
      <TextField fx:id="teamName" layoutX="226.0" layoutY="120.0" />
      <Label fx:id="label" layoutX="226.0" layoutY="103.0" text="Neues Team anlegen" />
      <Button fx:id="deleteTeam" layoutX="40.0" layoutY="303.0" mnemonicParsing="false" onAction="#deleteTeam" text="Löschen" textFill="RED">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Button>
      <Button fx:id="interrupt" layoutX="219.0" layoutY="303.0" mnemonicParsing="false" onAction="#interrupt" text="Abbrechen" />
      <Button fx:id="submit" layoutX="305.0" layoutY="303.0" mnemonicParsing="false" onAction="#submitTeam" text="Bestätigen" textFill="#0013ff">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
